<!-- Page Content -->
<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Livros
                <%= link_to new_administrative_book_path, class: "btn btn-success btn-circle pull-right", style: "margin-top: -5px" do %>
                  <i class="fa fa-plus"></i>
                <% end %>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
              <% if notice %>
                <div class="alert alert-success alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                    <%= notice %>
                </div>
              <% end %>
              <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th><%= @books.model.human_attribute_name('picture') %></th>
                      <th><%= @books.model.human_attribute_name('title') %></th>
                      <th><%= @books.model.human_attribute_name('description') %></th>
                      <th><%= @books.model.human_attribute_name('author') %></th>
                      <th></th>
                    </tr>
                  </thead>
                  <tbody>
                  	<% @books.each do |book| %>
                      <tr>
                        <td><%= book.id %></td>
                        <td><%= image_tag book.picture.url(:thumb) %></td>
                        <td><%= truncate(book.title, length: 30) %></td>
                        <td><%= truncate(book.description, length: 50) %></td>
                        <td><%= truncate(book.author, length: 40) %></td>
                        <td>
                          <%= link_to edit_administrative_book_path(book.id), class: "btn btn-primary btn-circle" do %>
                        		<i class="fa fa-edit"></i>
                          <% end %>

                          <%= link_to administrative_book_path(book.id), method: :delete, class: "btn btn-danger btn-circle", data: {confirm: "Você deseja realmente exluir o livro #{book.title}?"} do %>
	              						<i class="fa fa-minus"></i>
                          <% end %>
          							</td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
              <!-- /.table-responsive -->
          </div>
          <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
          
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>
<!-- /#page-wrapper -->