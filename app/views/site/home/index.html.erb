
    <!-- Page Content -->
    <div class="container">

				<!-- Title -->
        <div class="row">
            <div class="col-lg-12">
                <h3>Lista de Livros</h3>
            </div>
        </div>
        <!-- /.row -->

        <!-- Page Features -->
        <div class="row text-center">
          <% @books.each do |book| %>
            <div class="col-md-4 col-sm-8 hero-feature">
                <div class="thumbnail">
                    <img src="http://placehold.it/300x450" alt="">
                    <div class="caption">
                        <h4><%= truncate(book.title, length: 30) %></h4>
                        <p><%= truncate(book.description, length: 40) %></p>
                        <p>Autor: <%= truncate(book.author, length: 20) %></p>
                    </div>
                </div>
            </div>
          <% end %>

        </div>
        <!-- /.row -->

        <hr>

        

    </div>
    <!-- /.container -->