    <div class="container">
      <!-- Title -->
      <div class="row">
          <div class="col-lg-12">
              <h2>Lista de Livros</h2>
          </div>
      </div>
      <!-- /.row -->
      <div class="row">
        <div class="col-lg-12">
            <div class="well well-sm">
                
              <div class="row">
                <div class="col-lg-6">
                  
                </div><!-- /.col-lg-6 -->
                <div class="col-lg-6">
                  <div class="input-group">
                    <input type="text" class="form-control" placeholder="Pesquisar por...">
                    <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Pesquisar</button>
                    </span>
                  </div><!-- /input-group -->
                </div><!-- /.col-lg-6 -->
              </div><!-- /.row -->



            </div>
        </div>
    </div>
    <!-- Page Content -->
    <div class="container">

				

        <!-- Page Features -->
        <div class="row text-center">
          <% @books.each do |book| %>
            <div class="col-md-4 col-sm-8 hero-feature">
                <div class="thumbnail">
                    <%= image_tag book.picture.url(:medium) %>
                    
                    <div class="caption">
                        <h4><%= truncate(book.title, length: 30) %></h4>
                        <p><%= truncate(book.description, length: 40) %></p>
                        <p>Autor: <%= truncate(book.author, length: 20) %></p>
                    </div>
                </div>
            </div>
          <% end %>

        </div>
        <!-- /.row -->

        <hr>
</div>
        

    